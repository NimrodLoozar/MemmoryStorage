# Production Environment Variables
# This file contains production-safe environment variables
# Copy this to .env.production for production builds

# Application Environment
NODE_ENV=production

# Admin Authentication (Production)
# Change this to a secure password for production deployment
ADMIN_PASSWORD=SecureMemory2024!

# Storage Configuration
ENABLE_ASYNC_STORAGE=true
ENABLE_INDEXED_DB=true
MAX_IMAGE_SIZE=5242880
COMPRESSION_QUALITY=0.5
MAX_IMAGE_DIMENSION=600

# Error Reporting (Add your crash reporting service)
# SENTRY_DSN=your-sentry-dsn-here
# BUGSNAG_API_KEY=your-bugsnag-key-here

# Analytics (Add your analytics service)
# ANALYTICS_ID=your-analytics-id-here

# Feature Flags
ENABLE_IMAGE_UPLOAD=true
ENABLE_IMAGE_DELETE=true
ENABLE_DEBUG_UI=false
ENABLE_CONSOLE_LOGS=false

# Security Settings
ENABLE_HAPTIC_FEEDBACK=true
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5

# Performance Settings
ENABLE_IMAGE_LAZY_LOADING=true
FLATLIST_OPTIMIZATION=true
CACHE_IMAGES=true